{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}/include",
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/glad/*.c",
                "${workspaceFolder}/shaders/*.cpp",
                "${workspaceFolder}/resources/*.cpp",
                "${workspaceFolder}/primitives/*.cpp",
                "${workspaceFolder}/camera/*.cpp",
                "${workspaceFolder}/texture/*.cpp",
                "${workspaceFolder}/application/*.cpp",
                "${workspaceFolder}/collision/*.cpp",
                "${workspaceFolder}/lights/*.cpp",
                "${workspaceFolder}/player/*.cpp",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}",
                "-lGL",
                "-lglfw"
            ],
            "options": {
                "cwd": "${workspaceFolder}"  // Ensure the current working directory is workspace root
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Run Executable",
            "type": "shell",
            "command": "${workspaceFolder}/bin/${fileBasenameNoExtension}",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}